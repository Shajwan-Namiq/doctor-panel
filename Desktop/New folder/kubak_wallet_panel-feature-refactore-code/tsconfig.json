{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "module": "es2020",
    "target": "ES5",
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "es2019",
      "dom",
      "esnext",
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "skipLibCheck": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}